extends layout

block content
  h1= title
  p Welcome to #{title}

  div
    a(href='/facebook/login') Log In with Facebook
  div
    a(href="/facebook/profile") Facebook Profile

  div
    a(href='/auth/google') Log In Google
  div
    a(href='/auth/account') Google Account

  div
    a(href='/logout') Logout

  div
    a(href='/status') Status Link

    button#status Status

  .panel.panel-default
    .panel-heading Twitter
    .panel-body
      ul.list-group
        li.list-group-item
          a(href='/twitter/login') Log In with Twitter
        li.list-group-item
          a(href='/twitter/profile') Twitter Profile

  div
    pre#report
  div
    pre#debug